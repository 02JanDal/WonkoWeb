<h2>Additional information required</h2>

<div class="alert alert-info" role="alert">
  If you already have an account, you should <a href="<%= new_user_session_path %>">log in</a> and visit <a href="<%= user_accounts_path %>">Accounts</a> to link <%= @omniauth_data['provider'] %> to your account.
</div>

<%= simple_form_for @user, as: 'user', url: finish_signup_path do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :password, as: :hidden %>
      <%= f.input :password_confirmation, as: :hidden %>
      <%= fields_for :omniauth_data, @omniauth_data do |omniauth_form| %>
        <%= omniauth_form.hidden_field :data %>
      <% end %>

      <%= f.input :email, required: true, autofocus: true %>
      <%= f.input :username, required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, 'Continue' %>
    </div>
<% end %>
