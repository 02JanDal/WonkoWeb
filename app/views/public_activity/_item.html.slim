= render 'public_activity/user', activity: activity
.media-body.media-middle
  small.text-muted = timeago_tag activity.created_at
  h4.media-heading
    = view_flow.content.delete :heading
    - if @user && @user == current_user && activity.unread?(@user)
      span.label.label-success New
  = view_flow.content.delete :body
.media-right.media-middle
  = view_flow.content.delete :right
